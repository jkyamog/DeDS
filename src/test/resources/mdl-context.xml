<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

            
  <context:property-placeholder location="main/test/mdl.properties"/>

  <bean id="capabilityService" class="nz.net.catalyst.mobile.mdl.device.WurflCapabilityServiceImpl" init-method="init" destroy-method="cleanup">
     <property name="wurflDirPath" value="${mdl.wurflDirPath}"/>
  </bean>

  <bean id="objectDeSerializer" class="nz.net.catalyst.mobile.mdl.device.JsonDeSerializerImpl"/>
  
  <bean id="capabilityServiceController" class="nz.net.catalyst.mobile.mdl.device.CapabilityServiceController">
    <property name="capabilityService" ref="capabilityService"/>
    <property name="objectDeSerializer" ref="objectDeSerializer"/>
  </bean>  

</beans>
