<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
           
  <context:property-placeholder location="site/test/*.properties"/>          

  <bean id="wurflCapabilityService" class="nz.net.catalyst.mobile.mdl.device.WurflCapabilityServiceImpl" init-method="init" destroy-method="cleanup">
     <property name="wurflDirPath" value="${mdl.wurflDirPath}"/>
  </bean>

  <bean id="internetExplorerCapabilityService" class="nz.net.catalyst.mobile.mdl.device.InternetExplorerCapabilityServiceImpl"/>
  <bean id="operaMiniCapabilityService" class="nz.net.catalyst.mobile.mdl.device.OperaMiniCapabilityServiceImpl">
    <property name="wurflCapabilityService" ref="wurflCapabilityService"/>
  </bean>

  <bean id="chainedCapabilityService" class="nz.net.catalyst.mobile.mdl.device.ChainedCapabilityServiceImpl">
    <property name="capabilityServices">
      <list>
        <ref bean="wurflCapabilityService"/>
        <ref bean="internetExplorerCapabilityService"/>
        <ref bean="operaMiniCapabilityService"/>
      </list>
    </property>
  </bean>  

  <bean id="capabilityServiceDeSerializer" class="nz.net.catalyst.mobile.mdl.device.JacksonCapabilityServiceDeSerializerImpl"/>
  
  <bean id="capabilityServiceController" class="nz.net.catalyst.mobile.mdl.device.CapabilityServiceController">
    <property name="capabilityService" ref="wurflCapabilityService"/>
    <property name="capabilityServiceDeSerializer" ref="capabilityServiceDeSerializer"/>
  </bean>  
  
</beans>
